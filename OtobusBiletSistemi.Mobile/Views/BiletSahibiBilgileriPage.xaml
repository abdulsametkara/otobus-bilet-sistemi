                    <Label Text="Bilet sahibi bilgilerini eksiksiz doldurunuz" 
                           Style="{StaticResource BodySmallStyle}" 
                           TextColor="{StaticResource Gray500}"/>
                </StackLayout>

                <!-- TC Kimlik No -->
                <Frame Style="{StaticResource ModernFormFrameStyle}">
                    <StackLayout>
                        <Label Text="ðŸ†” TC KÄ°MLÄ°K NUMARASI *" Style="{StaticResource ModernFormLabelStyle}"/>
                        <Entry Text="{Binding MevcutBiletSahibi.TcKimlikNo}" 
                               Placeholder="12345678912" 
                               Keyboard="Numeric" 
                               MaxLength="11" 
                               Style="{StaticResource ModernEntryStyle}"/>
                    </StackLayout>
                </Frame>

                <!-- Ad and Soyad in Enhanced Grid -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="16">
                    <Frame Grid.Column="0" Style="{StaticResource ModernFormFrameStyle}">
                        <StackLayout>
                            <Label Text="ðŸ‘¤ AD *" Style="{StaticResource ModernFormLabelStyle}"/>
                            <Entry Text="{Binding MevcutBiletSahibi.Ad}" 
                                   Placeholder="AdÄ±nÄ±z" 
                                   Keyboard="Text" 
                                   Style="{StaticResource ModernEntryStyle}"/>
                        </StackLayout>
                    </Frame>
                    <Frame Grid.Column="1" Style="{StaticResource ModernFormFrameStyle}">
                        <StackLayout>
                            <Label Text="ðŸ‘¤ SOYAD *" Style="{StaticResource ModernFormLabelStyle}"/>
                            <Entry Text="{Binding MevcutBiletSahibi.Soyad}" 
                                   Placeholder="SoyadÄ±nÄ±z" 
                                   Keyboard="Text" 
                                   Style="{StaticResource ModernEntryStyle}"/>
                        </StackLayout>
                    </Frame>
                </Grid>

                <!-- Enhanced Cinsiyet Selection -->
                <Frame Style="{StaticResource ModernFormFrameStyle}">
                    <StackLayout>
                        <Label Text="âš§ CÄ°NSÄ°YET *" Style="{StaticResource ModernFormLabelStyle}"/>
                        <Picker Title="Cinsiyet seÃ§iniz" 
                                SelectedItem="{Binding MevcutBiletSahibi.Cinsiyet}" 
                                Style="{StaticResource ModernPickerStyle}">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>Erkek</x:String>
                                    <x:String>KadÄ±n</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                    </StackLayout>
                </Frame>
                
                <!-- Contact Information Section -->
                <Label Text="ðŸ“ž Ä°letiÅŸim Bilgileri" 
                       Style="{StaticResource H3Style}" 
                       Margin="0,32,0,16" 
                       FontSize="18"/>

                <!-- Telefon -->
                <Frame Style="{StaticResource ModernFormFrameStyle}">
                    <StackLayout>
                        <Label Text="ðŸ“± TELEFON NUMARASI *" Style="{StaticResource ModernFormLabelStyle}"/>
                        <Entry Text="{Binding MevcutBiletSahibi.Telefon}" 
                               Placeholder="05xxxxxxxxx" 
                               Keyboard="Telephone" 
                               Style="{StaticResource ModernEntryStyle}"/>
                    </StackLayout>
                </Frame>

                <!-- E-posta -->
                <Frame Style="{StaticResource ModernFormFrameStyle}">
                    <StackLayout>
                        <Label Text="ðŸ“§ E-POSTA ADRESÄ° *" Style="{StaticResource ModernFormLabelStyle}"/>
                        <Entry Text="{Binding MevcutBiletSahibi.Email}" 
                               Placeholder="ornek@email.com" 
                               Keyboard="Email" 
                               Style="{StaticResource ModernEntryStyle}"/>
                    </StackLayout>
                </Frame>

                <!-- Bottom Spacing -->
                <BoxView HeightRequest="24" Color="Transparent"/>
            </VerticalStackLayout>
        </ScrollView>
        
        <!-- 3. Enhanced Footer with Modern Buttons -->
        <Frame Grid.Row="2" BackgroundColor="{StaticResource White}" CornerRadius="0" Padding="20,24" HasShadow="False">
            <Frame.Shadow>
                <Shadow Brush="{StaticResource Gray300}"
                        Offset="0,-2"
                        Radius="12"
                        Opacity="0.1" />
            </Frame.Shadow>
            
            <VerticalStackLayout Spacing="16">
                <!-- Navigation for multiple passengers -->
                <Grid ColumnDefinitions="*,*" 
                      ColumnSpacing="16" 
                      IsVisible="{Binding HasMultiplePassengers}">
                    <Button Grid.Column="0" 
                            Text="â† Ã–nceki" 
                            Command="{Binding OncekiBiletSahibiCommand}" 
                            IsEnabled="{Binding CanGoPrevious}" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            HeightRequest="48"
                            CornerRadius="12"/>
                    <Button Grid.Column="1" 
                            Text="Sonraki â†’" 
                            Command="{Binding SonrakiBiletSahibiCommand}" 
                            IsEnabled="{Binding CanGoNext}" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            HeightRequest="48"
                            CornerRadius="12"
                            IsVisible="{Binding CanGoNext}"/>
                    <Button Grid.Column="1" 
                            Text="ðŸ’³ Ã–demeye GeÃ§" 
                            Command="{Binding OdemeYapCommand}" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            HeightRequest="48"
                            CornerRadius="12"
                            IsVisible="{Binding IsLastPassenger}"/>
                </Grid>
                
                <!-- Single Passenger Button -->
                <Button Text="ðŸ’³ Ã–demeye GeÃ§" 
                        Command="{Binding OdemeYapCommand}" 
                        Style="{StaticResource PrimaryButtonStyle}" 
                        IsVisible="{Binding IsSinglePassenger}"
                        HeightRequest="56"
                        FontSize="18"
                        CornerRadius="16"/>
            </VerticalStackLayout>
        </Frame>

    </Grid>
</ContentPage> 
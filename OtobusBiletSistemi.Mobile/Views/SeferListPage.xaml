<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:OtobusBiletSistemi.Mobile.ViewModels"
             xmlns:converters="clr-namespace:OtobusBiletSistemi.Mobile.Converters"
             x:Class="OtobusBiletSistemi.Mobile.Views.SeferListPage"
             x:Name="SeferListPageRoot"
             Title="Sefer Ara"
             BackgroundColor="#F8F9FA">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            
            <!-- Web ile aynı gradient'lar -->
            <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#667EEA" Offset="0.0" />
                <GradientStop Color="#764BA2" Offset="1.0" />
            </LinearGradientBrush>
            
            <LinearGradientBrush x:Key="HeroGradient" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF6B6B" Offset="0.0" />
                <GradientStop Color="#FECA57" Offset="1.0" />
            </LinearGradientBrush>
            
            <!-- Professional Card Style -->
            <Style x:Key="SearchCardStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="Padding" Value="30" />
                <Setter Property="Margin" Value="20,-40,20,20" />
            </Style>
            
            <Style x:Key="ResultCardStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="CornerRadius" Value="15" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="Margin" Value="20,10" />
            </Style>
            
            <!-- Modern Button Styles -->
            <Style x:Key="SearchButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource PrimaryGradient}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HeightRequest" Value="55" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Margin" Value="0,5" />
            </Style>
            
            <Style x:Key="ClearButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#6C757D" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HeightRequest" Value="55" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Margin" Value="0,5" />
            </Style>
            
            <Style x:Key="HeroButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource HeroGradient}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="30" />
                <Setter Property="HeightRequest" Value="55" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Padding" Value="25,0" />
            </Style>
            
            <!-- Professional Form Styles -->
            <Style x:Key="FormLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="#555" />
                <Setter Property="Margin" Value="0,0,0,8" />
            </Style>
            
            <Style x:Key="FormEntryStyle" TargetType="Entry">
                <Setter Property="BackgroundColor" Value="#F8F9FA" />
                <Setter Property="TextColor" Value="#333" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="Margin" Value="0,0,0,20" />
            </Style>
            
            <Style x:Key="FormDatePickerStyle" TargetType="DatePicker">
                <Setter Property="BackgroundColor" Value="#F8F9FA" />
                <Setter Property="TextColor" Value="#333" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="Margin" Value="0,0,0,20" />
            </Style>
            
            <Style x:Key="FormPickerStyle" TargetType="Picker">
                <Setter Property="BackgroundColor" Value="#F8F9FA" />
                <Setter Property="TextColor" Value="#333" />
                <Setter Property="TitleColor" Value="#888" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="Margin" Value="0,0,0,20" />
                <Setter Property="HorizontalOptions" Value="FillAndExpand" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>
            
            <!-- Modern Sefer Card Style -->
            <Style x:Key="SeferCardStyle" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="HasShadow" Value="True" />
                <Setter Property="Padding" Value="20" />
                <Setter Property="Margin" Value="15,8" />
            </Style>
            
            <!-- Header Styles -->
            <Style x:Key="CardHeaderStyle" TargetType="Label">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
            </Style>
            
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <StackLayout Spacing="0">
            
            <!-- Header Section (Web benzeri hero) -->
            <Grid Background="{StaticResource PrimaryGradient}" HeightRequest="140">
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="🚌 Otobüs Bilet Sistemi"
                           TextColor="White"
                           FontSize="22"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                    <Label Text="Türkiye'nin En Güvenilir Otobüs Bileti Platformu"
                           TextColor="White"
                           FontSize="14"
                           Opacity="0.9"
                           HorizontalOptions="Center"
                           Margin="0,5,0,0" />
                </StackLayout>
            </Grid>
            
            <!-- Search Form Card (Web'deki search-card benzeri) -->
            <Frame Style="{StaticResource SearchCardStyle}">
                <StackLayout Spacing="20">
                    
                    <!-- Form Header -->
                    <Label Text="🔍 Sefer Arama" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           TextColor="#667EEA"
                           HorizontalOptions="Center"
                           Margin="0,0,0,10" />
                    
                    <!-- Form Fields -->
                    <StackLayout Spacing="0">
                        <Label Text="📍 Nereden" Style="{StaticResource FormLabelStyle}" />
                        <Frame BackgroundColor="White" 
                               CornerRadius="12" 
                               Padding="0" 
                               HasShadow="True"
                               BorderColor="#DEE2E6"
                               Margin="0,0,0,20">
                            <Picker x:Name="KalkisYeriPicker"
                                    ItemsSource="{Binding KalkisYerleri}"
                                    SelectedItem="{Binding KalkisYeri}"
                                    ItemDisplayBinding="{Binding .}"
                                    Title="Kalkış şehri seçiniz"
                                    BackgroundColor="Transparent"
                                    TextColor="#495057"
                                    TitleColor="#6C757D"
                                    FontSize="16"
                                    HeightRequest="50"
                                    Margin="15,0"
                                    HorizontalOptions="FillAndExpand" />
                        </Frame>
                    </StackLayout>
                    
                    <StackLayout Spacing="0">
                        <Label Text="📍 Nereye" Style="{StaticResource FormLabelStyle}" />
                        <Frame BackgroundColor="White" 
                               CornerRadius="12" 
                               Padding="0" 
                               HasShadow="True"
                               BorderColor="#DEE2E6"
                               Margin="0,0,0,20">
                            <Picker x:Name="VarisYeriPicker"
                                    ItemsSource="{Binding VarisYerleri}"
                                    SelectedItem="{Binding VarisYeri}"
                                    ItemDisplayBinding="{Binding .}"
                                    Title="Varış şehri seçiniz"
                                    BackgroundColor="Transparent"
                                    TextColor="#495057"
                                    TitleColor="#6C757D"
                                    FontSize="16"
                                    HeightRequest="50"
                                    Margin="15,0"
                                    HorizontalOptions="FillAndExpand" />
                        </Frame>
                    </StackLayout>
                    
                    <StackLayout Spacing="0">
                        <Label Text="📅 Tarih" Style="{StaticResource FormLabelStyle}" />
                        <DatePicker x:Name="TarihPicker"
                                   Date="{Binding Tarih}"
                                   Style="{StaticResource FormDatePickerStyle}" />
                    </StackLayout>
                    
                    <StackLayout Spacing="0">
                        <Label Text="👥 Yolcu Sayısı" Style="{StaticResource FormLabelStyle}" />
                        <Frame BackgroundColor="White" 
                               CornerRadius="12" 
                               Padding="0" 
                               HasShadow="True"
                               BorderColor="#DEE2E6"
                               Margin="0,0,0,20">
                            <Picker x:Name="YolcuSayisiPicker"
                                    ItemsSource="{Binding YolcuSayisiListesi}"
                                    SelectedItem="{Binding YolcuSayisi}"
                                    SelectedIndex="0"
                                    Title="Yolcu sayısı seçiniz"
                                    BackgroundColor="Transparent"
                                    TextColor="#495057"
                                    TitleColor="#6C757D"
                                    FontSize="16"
                                    HeightRequest="50"
                                    Margin="15,0"
                                    HorizontalOptions="FillAndExpand" />
                        </Frame>
                    </StackLayout>
                    
                    <!-- Action Buttons -->
                    <Grid ColumnDefinitions="2*,1*" ColumnSpacing="15" Margin="0,10,0,0">
                        <Button Text="🔍 Sefer Ara"
                                Command="{Binding SearchSeferlerCommand}"
                                Style="{StaticResource SearchButtonStyle}"
                                Grid.Column="0" />
                        
                        <Button Text="🗑️ Temizle"
                                Command="{Binding ClearSearchCommand}"
                                Style="{StaticResource ClearButtonStyle}"
                                Grid.Column="1" />
                    </Grid>
                    
                    <!-- Test Navigation Button -->
                    <Button Text="🧪 Test Navigation (Debug)"
                            Command="{Binding TestNavigationCommand}"
                            BackgroundColor="Orange"
                            TextColor="White"
                            CornerRadius="10"
                            HeightRequest="45"
                            FontSize="14"
                            Margin="0,10,0,0" />
                    
                </StackLayout>
            </Frame>
            
            <!-- Results Section -->
            <Frame Style="{StaticResource ResultCardStyle}">
                <StackLayout Spacing="0">
                    
                    <!-- Results Header (Web'deki card-header) -->
                    <Grid Background="{StaticResource PrimaryGradient}" 
                          HeightRequest="60" 
                          Margin="0">
                        <StackLayout Orientation="Horizontal" 
                                   HorizontalOptions="Center" 
                                   VerticalOptions="Center"
                                   Spacing="10">
                            <Label Text="🚌" 
                                   TextColor="White" 
                                   FontSize="20" />
                            <Label Text="Bulunan Seferler" 
                                   Style="{StaticResource CardHeaderStyle}"
                                   FontSize="18" />
                        </StackLayout>
                    </Grid>
                    
                    <!-- Content Area -->
                    <StackLayout Padding="20" Spacing="15">
                        
                        <!-- Loading State -->
                        <StackLayout IsVisible="{Binding IsLoading}" 
                                    Spacing="15" 
                                    HorizontalOptions="Center" 
                                    VerticalOptions="Center"
                                    Padding="40">
                            <ActivityIndicator IsRunning="{Binding IsLoading}" 
                                             Color="#667EEA" 
                                             HeightRequest="50" />
                            <Label Text="Seferler aranıyor..." 
                                   FontSize="16" 
                                   TextColor="#6C757D"
                                   HorizontalOptions="Center" />
                        </StackLayout>
                        
                        <!-- Empty State (Web'deki empty state) -->
                        <StackLayout IsVisible="{Binding HasNoResults}"
                                    Spacing="20"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    Padding="40">
                            <Label Text="🔍" 
                                   FontSize="80" 
                                   HorizontalOptions="Center" 
                                   TextColor="#E9ECEF" />
                            <Label Text="Aramanıza uygun sefer bulunamadı" 
                                   FontSize="20" 
                                   FontAttributes="Bold" 
                                   TextColor="#6C757D"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center" />
                            <Label Text="Lütfen arama kriterlerinizi değiştirerek tekrar deneyin." 
                                   FontSize="14" 
                                   TextColor="#6C757D"
                                   HorizontalOptions="Center" 
                                   HorizontalTextAlignment="Center"
                                   Margin="0,0,0,20" />
                            <Button Text="🚌 Tüm Seferleri Göster"
                                    Command="{Binding LoadSeferlerCommand}"
                                    Style="{StaticResource HeroButtonStyle}" />
                        </StackLayout>
                        
                    </StackLayout>
                    
                    <!-- Sefer Results List -->
                    <CollectionView ItemsSource="{Binding Seferler}"
                                   IsVisible="{Binding HasResults}"
                                   BackgroundColor="Transparent">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0">
                                    <Frame Style="{StaticResource SeferCardStyle}">
                                        <StackLayout Spacing="15">
                                            
                                            <!-- Route Header -->
                                            <StackLayout Orientation="Horizontal" Spacing="12">
                                                <Frame BackgroundColor="#667EEA" 
                                                       CornerRadius="20" 
                                                       HeightRequest="40" 
                                                       WidthRequest="40" 
                                                       HasShadow="False"
                                                       Padding="0"
                                                       VerticalOptions="Center">
                                                    <Label Text="🚌" 
                                                           FontSize="18" 
                                                           TextColor="White"
                                                           HorizontalOptions="Center"
                                                           VerticalOptions="Center" />
                                                </Frame>
                                                <StackLayout VerticalOptions="Center" Spacing="2">
                                                    <Label Text="{Binding GuzergahText}" 
                                                           FontSize="18" 
                                                           FontAttributes="Bold" 
                                                           TextColor="#2E3A59" />
                                                    <Label Text="{Binding FormattedTarih}" 
                                                           FontSize="12" 
                                                           TextColor="#6C757D" />
                                                </StackLayout>
                                            </StackLayout>
                                            
                                            <!-- Time & Terminal Information -->
                                            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                                                <StackLayout Grid.Column="0" Spacing="8">
                                                    <Label Text="🕐 Kalkış" 
                                                           FontSize="12" 
                                                           TextColor="#6C757D" 
                                                           FontAttributes="Bold" />
                                                    <Label Text="{Binding FormattedKalkisSaati}" 
                                                           FontSize="16" 
                                                           FontAttributes="Bold" 
                                                           TextColor="#28A745" />
                                                    <Label Text="{Binding KalkisTerminal}" 
                                                           FontSize="12" 
                                                           TextColor="#6C757D" />
                                                </StackLayout>
                                                
                                                <StackLayout Grid.Column="1" Spacing="8">
                                                    <Label Text="📍 Varış" 
                                                           FontSize="12" 
                                                           TextColor="#6C757D" 
                                                           FontAttributes="Bold" />
                                                    <Label Text="{Binding FormattedVarisSaati}" 
                                                           FontSize="16" 
                                                           FontAttributes="Bold" 
                                                           TextColor="#DC3545" />
                                                    <Label Text="{Binding VarisTerminal}" 
                                                           FontSize="12" 
                                                           TextColor="#6C757D" />
                                                </StackLayout>
                                            </Grid>
                                            
                                            <!-- Price & Seat Information -->
                                            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                                                <StackLayout Grid.Column="0" Spacing="5">
                                                    <Label Text="💰 Fiyat" 
                                                           FontSize="11" 
                                                           TextColor="#6C757D" 
                                                           FontAttributes="Bold" />
                                                    <Frame BackgroundColor="#28A745" 
                                                           CornerRadius="15" 
                                                           Padding="8,4" 
                                                           HasShadow="False">
                                                        <Label Text="{Binding FormattedFiyat}" 
                                                               FontSize="14" 
                                                               FontAttributes="Bold" 
                                                               TextColor="White"
                                                               HorizontalOptions="Center" />
                                                    </Frame>
                                                </StackLayout>
                                                
                                                <StackLayout Grid.Column="1" Spacing="5">
                                                    <Label Text="💺 Boş Koltuk" 
                                                           FontSize="11" 
                                                           TextColor="#6C757D" 
                                                           FontAttributes="Bold" />
                                                    <Frame BackgroundColor="#17A2B8" 
                                                           CornerRadius="15" 
                                                           Padding="8,4" 
                                                           HasShadow="False">
                                                        <Label Text="{Binding BosKoltukText}" 
                                                               FontSize="14" 
                                                               FontAttributes="Bold" 
                                                               TextColor="White"
                                                               HorizontalOptions="Center" />
                                                    </Frame>
                                                </StackLayout>
                                                
                                                <StackLayout Grid.Column="2" Spacing="5">
                                                    <Label Text="🚌 Otobüs" 
                                                           FontSize="11" 
                                                           TextColor="#6C757D" 
                                                           FontAttributes="Bold" />
                                                    <Label Text="{Binding OtobusInfo}" 
                                                           FontSize="12" 
                                                           TextColor="#6C757D"
                                                           HorizontalTextAlignment="Center" />
                                                </StackLayout>
                                            </Grid>
                                            
                                            <!-- Action Button -->
                                            <Button Text="🎫 Koltuk Seç ve Devam Et"
                                                   Command="{Binding BindingContext.SeferSecCommand, Source={x:Reference Name=SeferListPageRoot}}"
                                                   CommandParameter="{Binding .}"
                                                   Background="{StaticResource PrimaryGradient}"
                                                   TextColor="White"
                                                   CornerRadius="25"
                                                   HeightRequest="50"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   Margin="0,15,0,0" />
                                            
                                        </StackLayout>
                                    </Frame>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    
                </StackLayout>
            </Frame>
            
            <!-- Bottom Message -->
            <Label Text="{Binding SearchMessage}" 
                   IsVisible="{Binding HasSearchMessage}"
                   FontSize="14"
                   TextColor="#6C757D"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Padding="20,10,20,40" />
            
        </StackLayout>
    </ScrollView>
    
</ContentPage>
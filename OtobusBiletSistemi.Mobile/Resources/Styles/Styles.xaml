<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- JSON Tasarım Sistemi - Modern Mobile Transportation App Styles -->
    
    <!-- Modern Typography System v3.0 - Design Specification Compliant -->
    <!-- Heading Styles: 24px Bold for Main Headers -->
    <Style x:Key="H1Style" TargetType="Label">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="LineHeight" Value="1.2" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>
    
    <!-- Sub-heading Styles: 16px Medium for Sub Headers -->
    <Style x:Key="H2Style" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="LineHeight" Value="1.25" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>
    
    <!-- H3 Heading Styles: 18px Bold for Section Headers -->
    <Style x:Key="H3Style" TargetType="Label">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="LineHeight" Value="1.3" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>
    
    <!-- Body Text: 14px Regular for Body Content -->
    <Style x:Key="BodyStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="LineHeight" Value="1.5" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>
    
    <!-- Medium Body Text: 16px Medium for Emphasis -->
    <Style x:Key="BodyMediumStyle" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="LineHeight" Value="1.5" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>
    
    <!-- Small Body Text: 14px Regular for Secondary Content -->
    <Style x:Key="BodySmallStyle" TargetType="Label">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
        <Setter Property="LineHeight" Value="1.4" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>
    
    <!-- Modern Gradients -->
    <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource White}" Offset="0.0" />
        <GradientStop Color="{StaticResource Gray100}" Offset="1.0" />
    </LinearGradientBrush>

    <Style x:Key="CaptionStyle" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
        <Setter Property="LineHeight" Value="1.33" />
        <Setter Property="CharacterSpacing" Value="0.4" />
    </Style>
    
    <Style x:Key="OverlineStyle" TargetType="Label">
        <Setter Property="FontSize" Value="10" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
        <Setter Property="CharacterSpacing" Value="1.5" />
        <Setter Property="TextTransform" Value="Uppercase" />
    </Style>

    <Style x:Key="FormInputFrameStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource Gray200}" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="BorderColor" Value="Transparent" />
    </Style>

    <Style x:Key="FormInputLabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Margin" Value="16,8,16,0" />
    </Style>

    <Style x:Key="ChipStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource Gray200}" />
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="StrokeShape">
            <RoundRectangle CornerRadius="16"/>
        </Setter>
        <Setter Property="StrokeThickness" Value="0"/>
    </Style>

    <!-- Modern Navigation Styles -->
    <Style x:Key="NavigationHeaderStyle" TargetType="Label" BasedOn="{StaticResource H3Style}">
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontSize" Value="18" />
    </Style>
    
    <Style x:Key="NavigationButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="WidthRequest" Value="44"/>
        <Setter Property="HeightRequest" Value="44"/>
        <Setter Property="CornerRadius" Value="22"/>
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="BorderWidth" Value="0"/>
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
    </Style>

    <Style x:Key="IconButtonStyle" TargetType="Border">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="WidthRequest" Value="44"/>
        <Setter Property="HeightRequest" Value="44"/>
        <Setter Property="StrokeShape">
            <RoundRectangle CornerRadius="22" />
        </Setter>
    </Style>

    <!-- Special Typography Styles -->
    <Style x:Key="HeroTitleStyle" TargetType="Label">
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="LineHeight" Value="1.1" />
        <Setter Property="CharacterSpacing" Value="0.25" />
    </Style>
    
    <!-- Prominent Price Style - Enhanced Visual Hierarchy -->
    <Style x:Key="PriceStyle" TargetType="Label">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource Secondary}" />
        <Setter Property="LineHeight" Value="1.2" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>
    
    <Style x:Key="BadgeStyle" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextOnPrimary}" />
        <Setter Property="CharacterSpacing" Value="0.5" />
    </Style>

    <!-- Enhanced Button Styles v3.0 with Advanced Micro-interactions -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryGradient}" />
        <Setter Property="TextColor" Value="{StaticResource TextOnPrimary}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HeightRequest" Value="52" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource Primary}"
                    Offset="0,4"
                    Radius="8"
                    Opacity="0.25" />
        </Setter>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="1.0" />
                            <Setter Property="Opacity" Value="1.0" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="0.96" />
                            <Setter Property="Opacity" Value="0.85" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="1.02" />
                            <Setter Property="Opacity" Value="0.9" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.6" />
                            <Setter Property="Background" Value="{StaticResource Gray300}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>
    
    <!-- Interactive Card Style with Micro-interactions -->
    <Style x:Key="InteractiveCardStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceCard}" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="BorderColor" Value="{StaticResource SurfaceBorder}" />
        <Setter Property="Margin" Value="0,8" />
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource Gray300}"
                    Offset="0,2"
                    Radius="8"
                    Opacity="0.1" />
        </Setter>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="1.0" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="0.98" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="1.02" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- Elevated Card Style - For prominent content sections -->
    <Style x:Key="ElevatedCardStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceCard}" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="BorderColor" Value="{StaticResource SurfaceBorder}" />
        <Setter Property="Margin" Value="0,12" />
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource Black}"
                    Offset="0,4"
                    Radius="16"
                    Opacity="0.12" />
        </Setter>
    </Style>

    <!-- Secondary Button Style -->
    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{StaticResource Primary}" />
        <Setter Property="BorderColor" Value="{StaticResource Primary}" />
        <Setter Property="BorderWidth" Value="2" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HeightRequest" Value="52" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource PrimarySubtle}" />
                            <Setter Property="Scale" Value="0.98" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>
    
    <!-- Accent Button Style -->
    <Style x:Key="AccentButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AccentGradient}" />
        <Setter Property="TextColor" Value="{StaticResource TextOnPrimary}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HeightRequest" Value="52" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource Accent}"
                    Offset="0,4"
                    Radius="8"
                    Opacity="0.25" />
        </Setter>
    </Style>
    
    <!-- Small Button Style -->
    <Style x:Key="SmallButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="{StaticResource TextOnPrimary}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HeightRequest" Value="36" />
        <Setter Property="Padding" Value="16,0" />
        <Setter Property="HorizontalOptions" Value="Start" />
    </Style>
    
    <!-- Floating Action Button Style -->
    <Style x:Key="FabButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource PrimaryGradient}" />
        <Setter Property="TextColor" Value="{StaticResource TextOnPrimary}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="CornerRadius" Value="28" />
        <Setter Property="WidthRequest" Value="56" />
        <Setter Property="HeightRequest" Value="56" />
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource Primary}"
                    Offset="0,6"
                    Radius="12"
                    Opacity="0.3" />
        </Setter>
    </Style>

    <!-- Modern Card Styles v2.0 -->
    <Style x:Key="CardStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceCard}" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="BorderColor" Value="{StaticResource SurfaceBorder}" />
        <Setter Property="Margin" Value="0,8" />
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource Gray300}"
                    Offset="0,2"
                    Radius="8"
                    Opacity="0.1" />
        </Setter>
    </Style>


    <!-- Hero Card Style -->
    <Style x:Key="HeroCardStyle" TargetType="Frame">
        <Setter Property="Background" Value="{StaticResource HeroGradient}" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="Padding" Value="24" />
        <Setter Property="Margin" Value="0,12" />
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource Primary}"
                    Offset="0,6"
                    Radius="16"
                    Opacity="0.2" />
        </Setter>
    </Style>
    
    <!-- Quick Action Card Style -->
    <Style x:Key="QuickActionCardStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="CornerRadius" Value="14" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="Margin" Value="6" />
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource Primary}"
                    Offset="0,3"
                    Radius="6"
                    Opacity="0.3" />
        </Setter>
    </Style>
    
    <!-- Modern Trip Card Style -->
    <Style x:Key="TripCardStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceCard}" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="Margin" Value="8,6" />
        <Setter Property="BorderColor" Value="{StaticResource SurfaceBorder}" />
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource Gray300}"
                    Offset="0,2"
                    Radius="8"
                    Opacity="0.08" />
        </Setter>
    </Style>
    
    <!-- Compact Card Style -->
    <Style x:Key="CompactCardStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceCard}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="0,4" />
        <Setter Property="BorderColor" Value="{StaticResource SurfaceBorder}" />
    </Style>

    <!-- Standard Input Style -->
    <Style x:Key="StandardInputStyle" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundSecondary}" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource TextSecondary}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="MinimumHeightRequest" Value="44" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Focused">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource BackgroundMain}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- Navigation Bar Style -->
    <Style x:Key="NavigationBarStyle" TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{StaticResource BackgroundMain}" />
        <Setter Property="BarTextColor" Value="{StaticResource TextPrimary}" />
    </Style>

    <!-- Default Overrides - Design System Compliant -->
    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="{StaticResource TextOnPrimary}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="HeightRequest" Value="52" />
        <Setter Property="MinimumHeightRequest" Value="44" />
        <Setter Property="Padding" Value="20,0" />
    </Style>

    <Style TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundSecondary}" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource TextSecondary}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>

    <Style TargetType="Picker">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundSecondary}" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="TitleColor" Value="{StaticResource TextSecondary}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>

    <Style TargetType="DatePicker">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundSecondary}" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="LineHeight" Value="1.5" />
        <Setter Property="MinimumHeightRequest" Value="44" />
    </Style>

    <Style TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceCard}" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BorderColor" Value="{StaticResource SurfaceBorder}" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="Margin" Value="0,16,0,0" />
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource Black}"
                    Offset="0,4"
                    Radius="12"
                    Opacity="0.1" />
        </Setter>
    </Style>

    <Style TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{StaticResource Primary}" />
    </Style>

    <Style TargetType="CheckBox">
        <Setter Property="Color" Value="{StaticResource Primary}" />
        <Setter Property="MinimumHeightRequest" Value="44"/>
        <Setter Property="MinimumWidthRequest" Value="44"/>
    </Style>

    <!-- Status Colors for UI Elements -->
    <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="BackgroundColor" Value="{StaticResource StatusSuccess}" />
    </Style>

    <Style x:Key="WarningButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="BackgroundColor" Value="{StaticResource StatusWarning}" />
    </Style>

    <Style x:Key="ErrorButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="BackgroundColor" Value="{StaticResource StatusError}" />
    </Style>

    <!-- Tab Bar Styles -->
    <Style TargetType="TabBar">
        <Setter Property="Shell.BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="Shell.ForegroundColor" Value="{StaticResource TextOnPrimary}" />
        <Setter Property="Shell.TitleColor" Value="{StaticResource TextOnPrimary}" />
        <Setter Property="Shell.DisabledColor" Value="#80FFFFFF" />
        <Setter Property="Shell.UnselectedColor" Value="#CCFFFFFF" />
        <Setter Property="Shell.TabBarBackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="Shell.TabBarForegroundColor" Value="{StaticResource TextOnPrimary}" />
        <Setter Property="Shell.TabBarTitleColor" Value="{StaticResource TextOnPrimary}" />
        <Setter Property="Shell.TabBarUnselectedColor" Value="#CCFFFFFF" />
    </Style>

    <Style TargetType="Tab">
        <Setter Property="Shell.BackgroundColor" Value="Transparent" />
        <Setter Property="Shell.ForegroundColor" Value="{StaticResource TextOnPrimary}" />
        <Setter Property="Shell.TitleColor" Value="{StaticResource TextOnPrimary}" />
        <Setter Property="Shell.UnselectedColor" Value="#CCFFFFFF" />
    </Style>

    <Style TargetType="ShellContent">
        <Setter Property="Shell.BackgroundColor" Value="Transparent" />
        <Setter Property="Shell.ForegroundColor" Value="{StaticResource TextOnPrimary}" />
        <Setter Property="Shell.TitleColor" Value="{StaticResource TextOnPrimary}" />
    </Style>

    <!-- Modern Component Styles -->
    <Style x:Key="CardView" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="White"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="HasShadow" Value="True"/>
        <Setter Property="BorderColor" Value="Transparent"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource Gray400}" Offset="0,2" Radius="8" Opacity="0.1"/>
        </Setter>
    </Style>

    <Style x:Key="PrimaryActionButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="HorizontalOptions" Value="Fill"/>
        <Setter Property="VerticalOptions" Value="Center"/>
    </Style>

    <Style x:Key="FooterFrameStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource White}" />
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="HasShadow" Value="True"/>
        <Setter Property="BorderColor" Value="Transparent"/>
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource Gray500}" Offset="0,-4" Opacity="0.1" Radius="16"/>
        </Setter>
    </Style>
    
    <!-- Koltuk Button Style -->
    <Style x:Key="SeatButtonStyle" TargetType="Button">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="HeightRequest" Value="52"/>
        <Setter Property="WidthRequest" Value="52"/>
        <Setter Property="BorderWidth" Value="1"/>
        <Setter Property="Shadow">
            <Shadow Brush="{StaticResource Gray400}" Offset="0,1" Radius="3" Opacity="0.15" />
        </Setter>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Scale" Value="0.95" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.5"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

</ResourceDictionary>

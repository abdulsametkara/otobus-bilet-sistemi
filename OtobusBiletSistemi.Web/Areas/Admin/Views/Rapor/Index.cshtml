@{
    ViewData["Title"] = "Raporlar";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Sayfa Başlığı -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800 font-weight-bold">
                <i class="fas fa-chart-bar text-primary me-2"></i>
                Raporlar ve Analizler
            </h1>
            <p class="text-muted mb-0">Satış ve performans raporlarını görüntüleyin</p>
        </div>
    </div>

    <!-- Rapor Kartları -->
    <div class="row mb-4">
        <div class="col-lg-6 mb-4">
            <div class="card report-card h-100">
                <div class="card-header bg-primary text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-chart-line me-2"></i>
                        Satış Raporu
                    </h6>
                </div>
                <div class="card-body">
                    <p class="text-muted">Günlük, haftalık ve aylık satış verilerini görüntüleyin.</p>
                    <div class="row">
                        <div class="col-6">
                            <div class="stat-mini">
                                <div class="stat-number">156</div>
                                <div class="stat-label">Bugün</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-mini">
                                <div class="stat-number">1,248</div>
                                <div class="stat-label">Bu Ay</div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button class="btn btn-primary btn-sm">
                            <i class="fas fa-eye me-1"></i>
                            Detaylı Rapor
                        </button>
                        <button class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-download me-1"></i>
                            Excel
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-6 mb-4">
            <div class="card report-card h-100">
                <div class="card-header bg-success text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-lira-sign me-2"></i>
                        Gelir Raporu
                    </h6>
                </div>
                <div class="card-body">
                    <p class="text-muted">Günlük, haftalık ve aylık gelir analizleri.</p>
                    <div class="row">
                        <div class="col-6">
                            <div class="stat-mini">
                                <div class="stat-number">₺12,450</div>
                                <div class="stat-label">Bugün</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-mini">
                                <div class="stat-number">₺98,760</div>
                                <div class="stat-label">Bu Ay</div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button class="btn btn-success btn-sm">
                            <i class="fas fa-eye me-1"></i>
                            Detaylı Rapor
                        </button>
                        <button class="btn btn-outline-success btn-sm">
                            <i class="fas fa-download me-1"></i>
                            Excel
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-lg-6 mb-4">
            <div class="card report-card h-100">
                <div class="card-header bg-info text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-route me-2"></i>
                        Sefer Performansı
                    </h6>
                </div>
                <div class="card-body">
                    <p class="text-muted">En popüler güzergahlar ve sefer doluluk oranları.</p>
                    <div class="row">
                        <div class="col-6">
                            <div class="stat-mini">
                                <div class="stat-number">%87</div>
                                <div class="stat-label">Doluluk</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-mini">
                                <div class="stat-number">24</div>
                                <div class="stat-label">Aktif Sefer</div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button class="btn btn-info btn-sm">
                            <i class="fas fa-eye me-1"></i>
                            Detaylı Rapor
                        </button>
                        <button class="btn btn-outline-info btn-sm">
                            <i class="fas fa-download me-1"></i>
                            Excel
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-6 mb-4">
            <div class="card report-card h-100">
                <div class="card-header bg-warning text-white">
                    <h6 class="m-0 font-weight-bold">
                        <i class="fas fa-users me-2"></i>
                        Müşteri Analizi
                    </h6>
                </div>
                <div class="card-body">
                    <p class="text-muted">Müşteri davranışları ve sadakat analizi.</p>
                    <div class="row">
                        <div class="col-6">
                            <div class="stat-mini">
                                <div class="stat-number">1,542</div>
                                <div class="stat-label">Kayıtlı</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-mini">
                                <div class="stat-number">68</div>
                                <div class="stat-label">Yeni (Bu Ay)</div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button class="btn btn-warning btn-sm">
                            <i class="fas fa-eye me-1"></i>
                            Detaylı Rapor
                        </button>
                        <button class="btn btn-outline-warning btn-sm">
                            <i class="fas fa-download me-1"></i>
                            Excel
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.report-card {
    border: none;
    box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
    transition: all 0.3s ease;
}

.report-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 0.25rem 2rem 0 rgba(58, 59, 69, 0.2);
}

.stat-mini {
    text-align: center;
    padding: 10px;
    background: rgba(0,0,0,0.05);
    border-radius: 8px;
}

.stat-number {
    font-size: 1.5rem;
    font-weight: 700;
    color: #333;
}

.stat-label {
    font-size: 0.8rem;
    color: #666;
    text-transform: uppercase;
    font-weight: 500;
}
</style> 
 
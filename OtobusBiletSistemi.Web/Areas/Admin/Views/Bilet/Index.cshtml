@using OtobusBiletSistemi.Core.Entities
@model List<Bilet>

@{
    ViewData["Title"] = "Bilet Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Sayfa Başlığı -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800 font-weight-bold">
                <i class="fas fa-ticket-alt text-primary me-2"></i>
                Bilet Yönetimi
            </h1>
            <p class="text-muted mb-0">Satılan biletleri görüntüleyin ve yönetin</p>
        </div>
        <div>
            <button class="btn btn-success me-2">
                <i class="fas fa-download me-1"></i>
                Rapor Al
            </button>
            <button class="btn btn-primary">
                <i class="fas fa-plus me-1"></i>
                Yeni Bilet
            </button>
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card-mini bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="stat-label-mini">Toplam Bilet</div>
                            <div class="stat-value-mini">@Model.Count</div>
                        </div>
                        <div class="stat-icon-mini">
                            <i class="fas fa-ticket-alt"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card-mini bg-success text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="stat-label-mini">Toplam Gelir</div>
                            <div class="stat-value-mini">₺@Model.Sum(b => b.Fiyat).ToString("N0")</div>
                        </div>
                        <div class="stat-icon-mini">
                            <i class="fas fa-lira-sign"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card-mini bg-info text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="stat-label-mini">Bugünkü Satış</div>
                            <div class="stat-value-mini">@Model.Count(b => b.Sefer?.Tarih.Date == DateTime.Today)</div>
                        </div>
                        <div class="stat-icon-mini">
                            <i class="fas fa-calendar-day"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stat-card-mini bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-grow-1">
                            <div class="stat-label-mini">Ortalama Fiyat</div>
                            <div class="stat-value-mini">₺@(Model.Count > 0 ? Math.Round(Model.Average(b => b.Fiyat), 0) : 0)</div>
                        </div>
                        <div class="stat-icon-mini">
                            <i class="fas fa-calculator"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtreler -->
    <div class="card mb-4">
        <div class="card-body py-3">
            <div class="row align-items-center">
                <div class="col-md-3">
                    <input type="date" class="form-control form-control-sm" value="@DateTime.Today.ToString("yyyy-MM-dd")">
                </div>
                <div class="col-md-3">
                    <select class="form-select form-select-sm">
                        <option value="">Tüm Güzergahlar</option>
                        @foreach (var guzergah in Model.Select(b => b.Sefer?.Guzergah).Where(g => g != null).Distinct())
                        {
                            <option value="@guzergah?.GuzergahID">@guzergah?.Nereden - @guzergah?.Nereye</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <input type="text" class="form-control form-control-sm" placeholder="PNR Kodu ara...">
                </div>
                <div class="col-md-3">
                    <button class="btn btn-primary btn-sm w-100">
                        <i class="fas fa-search me-1"></i>
                        Filtrele
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bilet Tablosu -->
    <div class="card shadow">
        <div class="card-header py-3 bg-gradient-warning text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold">
                    <i class="fas fa-table me-2"></i>
                    Bilet Listesi
                </h6>
                <div class="d-flex">
                    <button class="btn btn-light btn-sm me-2">
                        <i class="fas fa-print me-1"></i>
                        Yazdır
                    </button>
                    <button class="btn btn-light btn-sm">
                        <i class="fas fa-file-excel me-1"></i>
                        Excel
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Bilet No</th>
                                <th>Yolcu</th>
                                <th>Sefer</th>
                                <th>Koltuk</th>
                                <th>Tarih</th>
                                <th>Fiyat</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var bilet in Model.OrderByDescending(b => b.BiletID))
                            {
                                <tr>
                                    <td>
                                        <strong class="text-primary">#@bilet.BiletID</strong>
                                    </td>
                                    <td>
                                        @if (bilet.Yolcu != null)
                                        {
                                            <div>
                                                <strong>@bilet.Yolcu.FullName</strong>
                                                <br>
                                                <small class="text-muted">@bilet.Yolcu.TCNo</small>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-danger">Yolcu Bilgisi Yok</span>
                                        }
                                    </td>
                                    <td>
                                        @if (bilet.Sefer != null)
                                        {
                                            <div>
                                                <strong>@(bilet.Sefer.Guzergah?.Nereden ?? "N/A") → @(bilet.Sefer.Guzergah?.Nereye ?? "N/A")</strong>
                                                <br>
                                                <small class="text-muted">Sefer #@bilet.Sefer.SeferID</small>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-danger">Sefer Bilgisi Yok</span>
                                        }
                                    </td>
                                    <td>
                                        @if (bilet.Koltuk != null)
                                        {
                                            <div class="koltuk-badge">
                                                <i class="fas fa-chair me-1"></i>
                                                <strong>@bilet.Koltuk.KoltukNo</strong>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-danger">Koltuk Yok</span>
                                        }
                                    </td>
                                    <td>
                                        @if (bilet.Sefer != null)
                                        {
                                            <div>
                                                <strong>@bilet.Sefer.Tarih.ToString("dd.MM.yyyy")</strong>
                                                <br>
                                                <small class="text-muted">@bilet.Sefer.Saat</small>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="price-badge">₺@bilet.Fiyat.ToString("N2")</span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@bilet.BiletID" class="btn btn-info btn-sm" title="Detay">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@bilet.BiletID" class="btn btn-danger btn-sm" title="İptal Et">
                                                <i class="fas fa-ban"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-ticket-alt fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Henüz Bilet Satılmamış</h5>
                    <p class="text-muted">Sistem henüz hiç bilet satışı yapmamış. İlk satışlar burada görünecektir.</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
.stat-card-mini {
    border: none;
    border-radius: 10px;
    transition: transform 0.2s ease;
}

.stat-card-mini:hover {
    transform: translateY(-2px);
}

.stat-label-mini {
    font-size: 0.75rem;
    opacity: 0.9;
    font-weight: 500;
}

.stat-value-mini {
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1;
}

.stat-icon-mini {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255,255,255,0.2);
}

.koltuk-badge {
    background: linear-gradient(135deg, #6c757d 0%, #495057 100%);
    color: white;
    padding: 4px 8px;
    border-radius: 6px;
    font-size: 0.8rem;
    display: inline-block;
}

.price-badge {
    background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
    color: white;
    padding: 4px 8px;
    border-radius: 6px;
    font-weight: 600;
    font-size: 0.9rem;
}

.bg-gradient-warning {
    background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 100%);
}
</style> 
 
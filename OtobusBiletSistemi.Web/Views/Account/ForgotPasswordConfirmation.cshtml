@{
    ViewData["Title"] = "Şifre Sıfırlama Linki Gönderildi";
}

<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="auth-card">
                    <div class="auth-header text-center">
                        <div class="mb-3">
                            <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                        </div>
                        <h2 class="text-success">Email Gönderildi!</h2>
                        <p class="mb-0">Şifre sıfırlama talimatları email adresinize gönderildi</p>
                    </div>
                    
                    <div class="auth-body text-center">
                        <div class="alert alert-info border-0 shadow-sm" role="alert">
                            <i class="fas fa-envelope me-2"></i>
                            <strong>Email kutunuzu kontrol edin</strong><br>
                            <small>Şifre sıfırlama linki email adresinize gönderildi. 
                            Email gelmezse spam klasörünüzü de kontrol edin.</small>
                        </div>

                        <div class="mt-4">
                            <h6><i class="fas fa-clock me-2"></i>Önemli Bilgiler:</h6>
                            <ul class="list-unstyled text-start">
                                <li><i class="fas fa-check text-success me-2"></i>Link 1 saat geçerlidir</li>
                                <li><i class="fas fa-check text-success me-2"></i>Tek kullanımlıktır</li>
                                <li><i class="fas fa-check text-success me-2"></i>Güvenli ve şifrelenmiştir</li>
                            </ul>
                        </div>

                        <div class="auth-links mt-4">
                            <p class="mb-2">
                                <a asp-action="ForgotPassword" class="text-decoration-none">
                                    <i class="fas fa-redo me-1"></i>Tekrar Gönder
                                </a>
                            </p>
                            <p class="mb-0">
                                <a asp-action="Login" class="text-decoration-none">
                                    <i class="fas fa-arrow-left me-1"></i>Giriş Sayfasına Dön
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
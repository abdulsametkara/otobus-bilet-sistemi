@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="auth-card">
                    <div class="auth-header">
                        <h2><i class="fas fa-key me-2"></i>Şifremi Unuttum</h2>
                        <p class="mb-0">Email adresinizi girin, şifre sıfırlama linki gönderelim</p>
                    </div>
                    
                    <div class="auth-body">
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                @TempData["ErrorMessage"]
                            </div>
                        }

                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <form asp-action="ForgotPassword" method="post" class="needs-validation" novalidate>
                            <div class="form-floating mb-4">
                                <input asp-for="Email" type="email" class="form-control" placeholder="email@example.com" required />
                                <label asp-for="Email"><i class="fas fa-envelope me-2"></i>Email Adresiniz</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Kayıtlı email adresinizi girin, şifre sıfırlama talimatlarını göndereceğiz.
                                </div>
                            </div>

                            <button type="submit" class="btn-auth">
                                <i class="fas fa-paper-plane me-2"></i>Şifre Sıfırlama Linki Gönder
                            </button>
                        </form>

                        <div class="auth-links">
                            <p class="mb-0">
                                Şifrenizi hatırladınız mı?
                                <a asp-action="Login" class="text-decoration-none">
                                    <i class="fas fa-sign-in-alt me-1"></i>Giriş Yapın
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Focus email input
            document.querySelector('input[name="Email"]').focus();
        });
    </script>
} 
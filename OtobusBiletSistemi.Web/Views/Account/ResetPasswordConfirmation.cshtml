@{
    ViewData["Title"] = "Şifre Başarıyla Sıfırlandı";
}

<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="auth-card">
                    <div class="auth-header text-center">
                        <div class="mb-3">
                            <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                        </div>
                        <h2 class="text-success">Şifre Sıfırlandı!</h2>
                        <p class="mb-0">Şifreniz başarıyla değiştirildi</p>
                    </div>
                    
                    <div class="auth-body text-center">
                        <div class="alert alert-success border-0 shadow-sm" role="alert">
                            <i class="fas fa-shield-alt me-2"></i>
                            <strong>Güvenliğiniz için:</strong><br>
                            <small>Yeni şifrenizi güvende tutun ve kimseyle paylaşmayın.</small>
                        </div>

                        <div class="mt-4">
                            <h6><i class="fas fa-lightbulb me-2"></i>Öneriler:</h6>
                            <ul class="list-unstyled text-start">
                                <li><i class="fas fa-check text-success me-2"></i>Güçlü bir şifre kullanın</li>
                                <li><i class="fas fa-check text-success me-2"></i>Şifrenizi düzenli olarak değiştirin</li>
                                <li><i class="fas fa-check text-success me-2"></i>Şüpheli aktivite durumunda hemen değiştirin</li>
                            </ul>
                        </div>

                        <div class="auth-links mt-4">
                            <a asp-action="Login" class="btn-auth">
                                <i class="fas fa-sign-in-alt me-2"></i>Şimdi Giriş Yap
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
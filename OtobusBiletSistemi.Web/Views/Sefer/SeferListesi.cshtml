@model IEnumerable<OtobusBiletSistemi.Web.Models.SeferDetayViewModel>

@{
    ViewData["Title"] = "Sefer Listesi";
}

<div class="container mt-4">
    <!-- Arama Kriterleri Özeti -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-search me-2"></i>Arama Kriterleri
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <strong>Nereden:</strong> @ViewBag.Nereden
                </div>
                <div class="col-md-3">
                    <strong>Nereye:</strong> @ViewBag.Nereye
                </div>
                <div class="col-md-3">
                    <strong>Tarih:</strong> @ViewBag.Tarih
                </div>
                <div class="col-md-3">
                    <strong>Yolcu Sayısı:</strong> @ViewBag.YolcuSayisi
                </div>
            </div>
            <div class="mt-3">
                <a href="/" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-edit me-1"></i>Aramayı Değiştir
                </a>
            </div>
        </div>
    </div>

    <!-- Sefer Sonuçları -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-bus me-2"></i>Bulunan Seferler 
                        <span class="badge bg-secondary">@Model.Count() adet</span>
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Kalkış Saati</th>
                                        <th>Kalkış Terminali</th>
                                        <th>Varış Terminali</th>
                                        <th>Otobüs</th>
                                        <th>Fiyat</th>
                                        <th>Müsait Koltuk</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var seferDetay in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong class="text-primary">@seferDetay.KalkisSaati</strong>
                                                <br>
                                                <small class="text-muted">@seferDetay.SeferTarihi</small>
                                            </td>
                                            <td>
                                                <i class="fas fa-map-marker-alt text-success me-1"></i>
                                                @{
                                                    var kalkisYeri = seferDetay.Guzergah?.Nereden ?? seferDetay.Sefer.Kalkis;
                                                    var kalkisTerminal = kalkisYeri;
                                                    if (kalkisYeri == "Ankara") kalkisTerminal = "Ankara Otogarı";
                                                    else if (kalkisYeri == "İstanbul") kalkisTerminal = "İstanbul Büyük Otogarı";
                                                    else if (kalkisYeri == "İzmir") kalkisTerminal = "İzmir Otogarı";
                                                    else if (kalkisYeri == "Bursa") kalkisTerminal = "Bursa Terminali";
                                                    else if (!kalkisYeri.Contains("Terminal") && !kalkisYeri.Contains("Otogar") && !kalkisYeri.Contains("Havalimanı"))
                                                        kalkisTerminal = kalkisYeri + " Terminali";
                                                }
                                                @kalkisTerminal
                                            </td>
                                            <td>
                                                <i class="fas fa-map-marker-alt text-danger me-1"></i>
                                                @{
                                                    var varisYeri = seferDetay.Guzergah?.Nereye ?? seferDetay.Sefer.Varis;
                                                    var varisTerminal = varisYeri;
                                                    if (varisYeri == "Ankara") varisTerminal = "Ankara Otogarı";
                                                    else if (varisYeri == "İstanbul") varisTerminal = "İstanbul Büyük Otogarı";
                                                    else if (varisYeri == "İzmir") varisTerminal = "İzmir Otogarı";
                                                    else if (varisYeri == "Bursa") varisTerminal = "Bursa Terminali";
                                                    else if (!varisYeri.Contains("Terminal") && !varisYeri.Contains("Otogar") && !varisYeri.Contains("Havalimanı"))
                                                        varisTerminal = varisYeri + " Terminali";
                                                }
                                                @varisTerminal
                                            </td>
                                            <td>
                                                <i class="fas fa-bus me-1"></i>
                                                @(seferDetay.Otobus?.Plaka ?? $"Otobüs #{seferDetay.Sefer.OtobusID}")
                                                <br>
                                                <small class="text-muted">@seferDetay.ToplamKoltukSayisi Koltuk</small>
                                            </td>
                                            <td>
                                                <span class="badge bg-success fs-6">₺@seferDetay.BiletFiyati</span>
                                                <br>
                                                <small class="text-muted">Kişi başı</small>
                                            </td>
                                            <td>
                                                @if (seferDetay.BosKoltukSayisi > 0)
                                                {
                                                    <span class="badge bg-info">@seferDetay.BosKoltukSayisi Boş</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Dolu</span>
                                                }
                                                <br>
                                                <small class="text-muted">@seferDetay.ToplamKoltukSayisi koltuktan</small>
                                            </td>
                                            <td>
                                                @if (seferDetay.BosKoltukSayisi >= ViewBag.YolcuSayisi)
                                                {
                                                    @if (User.Identity.IsAuthenticated)
                                                    {
                                                        <a href="/Koltuk/Secim/@seferDetay.Sefer.SeferID?yolcuSayisi=@ViewBag.YolcuSayisi" 
                                                           class="btn btn-primary btn-sm">
                                                            <i class="fas fa-chair me-1"></i>
                                                            Koltuk Seç
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a href="/Account/Login?returnUrl=/Koltuk/Secim/@seferDetay.Sefer.SeferID?yolcuSayisi=@ViewBag.YolcuSayisi" 
                                                           class="btn btn-warning btn-sm">
                                                            <i class="fas fa-sign-in-alt me-1"></i>
                                                            Giriş Yap
                                                        </a>
                                                    }
                                                }
                                                else
                                                {
                                                    <button class="btn btn-secondary btn-sm" disabled>
                                                        <i class="fas fa-times me-1"></i>
                                                        Yetersiz Koltuk
                                                    </button>
                                                }
                                                <br>
                                                <a href="/Sefer/Detay/@seferDetay.Sefer.SeferID" 
                                                   class="btn btn-outline-info btn-sm mt-1">
                                                    <i class="fas fa-info-circle me-1"></i>
                                                    Detay
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-search-minus fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Aramanıza uygun sefer bulunamadı</h5>
                            <p class="text-muted">Lütfen arama kriterlerinizi değiştirerek tekrar deneyin.</p>
                            <a href="/" class="btn btn-primary">
                                <i class="fas fa-search me-1"></i>Yeni Arama Yap
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <!-- Bilgilendirme -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-info">
                    <h6><i class="fas fa-info-circle me-2"></i>Bilgi:</h6>
                    <ul class="mb-0">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>Koltuk seçimi için "Koltuk Seç" butonuna tıklayın</li>
                        }
                        else
                        {
                            <li>Bilet satın almak için önce giriş yapmanız gerekmektedir</li>
                            <li>Koltuk seçimi için "Giriş Yap" butonuna tıklayın</li>
                        }
                        <li>Sefer detayları için "Detay" linkini kullanabilirsiniz</li>
                        <li>Fiyatlar sefer başına gösterilmektedir</li>
                    </ul>
                </div>
            </div>
        </div>
    }
</div>

<div class="modal fade" id="yeniAramaModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Yeni Sefer Arama</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Ana sayfaya yönlendirileceksiniz.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <a href="/" class="btn btn-primary">Ana Sayfa</a>
            </div>
        </div>
    </div>
</div> 



 
 
 
 